# Environment Configuration Example
# Copy this file to .env and modify values as needed

# Environment
ENVIRONMENT=development
DEBUG=true
SERVICE_NAME=ai-agent-framework
VERSION=0.1.0

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_agent_framework
DATABASE_ASYNC_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_agent_framework
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# Security Configuration
SECURITY_SECRET_KEY=your-secret-key-change-in-production
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Keycloak Configuration
SECURITY_KEYCLOAK_SERVER_URL=http://localhost:8080
SECURITY_KEYCLOAK_REALM=ai-agent-framework
SECURITY_KEYCLOAK_CLIENT_ID=ai-agent-framework
SECURITY_KEYCLOAK_CLIENT_SECRET=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=console

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1
API_CORS_ORIGINS=["http://localhost:3000"]
API_CORS_CREDENTIALS=true
# Memory & Embeddings Configuration
MEMORY_EMBEDDING_PROVIDER=openai
MEMORY_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_API_KEY=not-required-for-ollama
MEMORY_VECTOR_DB_PATH=./data/chroma
